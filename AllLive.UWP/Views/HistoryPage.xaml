<Page
    x:Class="AllLive.UWP.Views.HistoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Windows10version1809="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract, 7)"
    xmlns:controls="using:AllLive.UWP.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AllLive.UWP.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:AllLive.UWP.Models"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Padding="16,8">
            <TextBlock FontSize="24">观看历史</TextBlock>
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button Command="{x:Bind Path=historyVM.RefreshCommand}" Visibility="{x:Bind Path=historyVM.Loading, Mode=OneWay, Converter={StaticResource displayConvert}}">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon
                            FontFamily="{StaticResource SegoeFluent}"
                            FontSize="14"
                            Glyph="&#xE72C;" />
                        <TextBlock Margin="8,0,0,0">刷新列表</TextBlock>
                    </StackPanel>
                </Button>
                <Button Margin="8,0" Command="{x:Bind Path=historyVM.InputCommand}">导入列表</Button>
                <Button Command="{x:Bind Path=historyVM.OutputCommand}">导出列表</Button>
                <Button Margin="8,0,0,0" Command="{x:Bind Path=historyVM.CleanCommand}">
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Symbol="Delete" />
                        <TextBlock Margin="8,0,0,0">清空</TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
        <controls:MyAdaptiveGridView
            Grid.Row="1"
            Margin="8,0,8,8"
            CanLoadMore="False"
            DesiredWidth="400"
            IsItemClickEnabled="True"
            ItemClick="ls_ItemClick"
            ItemHeight="72"
            ItemsSource="{x:Bind Path=historyVM.Items}"
            SelectionMode="None"
            StretchContentForSingleRow="False">
            <controls:MyAdaptiveGridView.ItemContainerStyle>
                <Style BasedOn="{StaticResource GridViewItemCornerRadiusStyle}" TargetType="GridViewItem">
                    <Setter Property="Margin" Value="4" />
                    <Setter Property="Padding" Value="8,4" />
                    <Setter Property="BorderThickness" Value="1" />
                    <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
                    <Setter Property="Background" Value="{ThemeResource ButtonBackground}" />
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </controls:MyAdaptiveGridView.ItemContainerStyle>
            <controls:MyAdaptiveGridView.ItemTemplate>
                <DataTemplate x:DataType="models:HistoryItem">
                    <Grid>
                        <Grid.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem
                                    Click="MenuFlyoutItem_Click"
                                    Icon="Delete"
                                    Text="移除" />
                            </MenuFlyout>
                        </Grid.ContextFlyout>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <PersonPicture
                            Width="56"
                            Height="48"
                            Background="Blue"
                            BorderThickness="0"
                            ProfilePicture="{x:Bind Path=Photo}" />
                        <StackPanel
                            Grid.Column="1"
                            Margin="8,0,0,0"
                            VerticalAlignment="Center">
                            <TextBlock Text="{x:Bind Path=UserName}" />
                            <TextBlock
                                Margin="0,4,0,0"
                                FontSize="12"
                                Foreground="Gray">
                                观看于<Run Text="{x:Bind Path=WatchTime}" />
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </controls:MyAdaptiveGridView.ItemTemplate>
        </controls:MyAdaptiveGridView>
        <TextBlock
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="Gray"
            Visibility="{x:Bind Path=historyVM.IsEmpty, Mode=OneWay}">
            这里还什么都没有~
        </TextBlock>
    </Grid>
</Page>
